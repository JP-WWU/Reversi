 Error do: [ :ex | 			UIManager default alert: ex description.		]. 		false.	] whileFalse.	! !!Player methodsFor: 'as yet unclassified' stamp: 'JP 11/3/2019 16:44'!initialize: aColor	color := aColor.	! !!Player methodsFor: 'as yet unclassified' stamp: 'JP 11/3/2019 21:58'!promptOrError	| position row column |	position := UIManager default 		request: 'Where would you like to place a tile?' 		initialAnswer: 'A1' 		title: 'Select Position'.	row := position 		detect: [:each | each isDigit] 		ifNone: [self error: 'Please enter a digit for the row.'].	row := row codePoint - 48.	(row < 1 | row > 8) ifTrue: [self error: 'Please enter a digit from 1 to 8 for the row'].	column := position 		detect: [:each | each isLetter] 		ifNone: [self error: 'Please enter a letter for the column.'].	column := column asUppercase codePoint - 64.	(column < 1 | column > 8) ifTrue: [self error: 'Please enter a letter from A to H for the column'].	^Array with: row with: column.	! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Player class	instanceVariableNames: ''!!Player class methodsFor: 'as yet unclassified' stamp: 'JP 11/3/2019 16:43'!withColor: aColor	^ self new		initialize: aColor;		yourself! !